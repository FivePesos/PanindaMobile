<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EFE1C0">

    <!-- Scrollable Profile Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navbarInclude"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="180dp"
                android:layout_height="60dp"
                android:adjustViewBounds="true"
                android:scaleType="fitCenter"
                android:src="@drawable/panindalogo_background"
                android:layout_marginTop="20dp"/>

            <!-- Profile Card -->

            <!-- Settings Card -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profileCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_bg"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/profileImage"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/circle_bg"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:id="@+id/userNameRow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profileImage">

                    <TextView
                        android:id="@+id/userName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gina Ga, Cole M."
                        android:textColor="#000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="6dp"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:id="@+id/editUserProfile"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/useredit" />
                </LinearLayout>

                <TextView
                    android:id="@+id/userDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="#555"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/userNameRow" />

                <ImageView
                    android:id="@+id/cameraIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:padding="6dp"
                    android:src="@drawable/camera"
                    app:layout_constraintBottom_toBottomOf="@id/profileImage"
                    app:layout_constraintEnd_toEndOf="@id/profileImage" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/settingsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_bg"
                android:padding="10dp"
                android:layout_marginTop="20dp">

                <!-- Change Username -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/pfpChangeUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Username"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/icEditUsername"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/tabler__edit" />
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/black" />

                <!-- Change Password -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="12dp">

                    <TextView
                        android:id="@+id/pfpChangePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:textColor="#000"
                        android:textSize="14sp" />

                    <ImageView
                        android:id="@+id/icEditPassword"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:src="@drawable/tabler__edit" />
                </RelativeLayout>
            </LinearLayout>

            <!-- Logout Button -->
            <Button
                android:id="@+id/changepassButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="#FFA500"
                android:text="Change password"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:layout_marginTop="20dp"/>
        </LinearLayout>
    </ScrollView>

    <!-- Navbar fixed at bottom -->
    <include
        layout="@layout/navigationbar"
        android:id="@+id/navbarInclude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
